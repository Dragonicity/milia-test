<p id="notice"><%= notice %></p>
<div id="banner">
  <%= image_tag 'logo.svg', alt: 'The Pragmatic Bookshelf' %> <span class="title"><%= @page_title %></span>
</div>

<div id="columns">
  <div id="side">
    <ul>
      <li><a href="http://www....">Some text</a></li>
      <li><a href="http://www....">Some text</a></li>
      <li><a href="http://www....">Some text</a></li>
    </ul>
  </div>
  <div id="main">
    <% cache @products do %>
      <% @products.each do |product| %>
        <% cache product do %>
          <div class="entry">
            <%= image_tag(product.thumb_nail) %>
            <h3><%= product.title %></h3>
            <div class="description">
              <%= sanitize(product.description) %> 
            </div>
            <div class="price_line">
              <span class="price"><%= number_to_currency(product.price) %></span>
            </div>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>