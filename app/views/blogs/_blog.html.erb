<p><%= image_tag blog.thumb_nail unless blog.thumb_nail.nil? %></p>
<p><%= link_to blog.title, blog_path(blog) %></p>
<p><%= blog.user.full_name %></p>
<p><%= t(:published) %> <%= distance_of_time_in_words(blog.created_at, Time.now) %> <%= t(:ago) %></p>
<p><%= link_to blog.status, toggle_status_blog_path(blog) %></p>
  
<% if logged_in?(:site_admin) %>
  <ul class="actions text-align-left">
  <li><%= link_to t(:edit), edit_blog_path(blog), class: "btn btn-primary" %></li>
  <li><%= link_to t(:delete), blog_path(blog), class: "btn btn-danger", 
            method: :delete, data: { confirm: t(:are_you_sure) } %></li>
</ul>
<% end %>






<p><%= blog.body %></p>