<div class="page-header">
  <%= render 'shared/page_title', title: t(:blog_show_title) %>
  <ul class="actions">
    <li><%= link_to t(:index),  blogs_path, class: "index" %></li>
    <% if logged_in?(:site_admin) %>
      <li><%= link_to t(:edit),   edit_blog_path(@blog), class: "edit" %></li>
      <li><%= link_to t(:delete), blog_path, class: "delete", 
              method: :delete, data: { confirm: t(:are_you_sure) } %></li>
    <% end %>
  </ul>
</div>

<div class="container">
  <%= image_tag @blog.main_image %>
  <h4><%= @blog.title %></h4>
  <p><%= @blog.user.full_name %></p>
  <p><%= t(:published) %> <%= distance_of_time_in_words(@blog.created_at, Time.now) %> <%= t(:ago) %></p>
  <p><%= link_to @blog.status, toggle_status_blog_path(@blog) %></p>
  <p><%= @blog.body %></p>  
</div>