<%= form_for @blog do |f| %>
  <div class= "col-sm-12">
  <div class="form-group">
    <%= f.label t(:title), class: ('required' if required?(@blog, :title)) %>
    <%= f.text_field :title, class: 'form-control' %><br/>
  </div>
  <div class="form-group">
          <%= f.label t(:body), class: ('required' if required?(@blog, :body)) %><br/>
          <%= f.text_area :body, class: 'form-control', rows: '15' %><br/>
  </div>
   <%= f.submit(@blog.new_record? ? t('create'): t('save'), class: 'btn btn-primary') %>
  </div>
<% end %>