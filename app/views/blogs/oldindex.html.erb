<div class="page-header">
  <%= render 'shared/page_title', title: t('.title') %>
  <ul class="actions">
    <li><%= link_to t('.new'), new_blog_path, class: "new" %></li>
  </ul>
</div>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <p>title</p>
      <p>Body</p>
      <p>User</p>
      <th class="fit"><%= t('.actions') %></th>
    </tr>
  </thead>
  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= blog.title %></td>
        <td><%= blog.body %></td>
        <td><%= blog.user.full_name %></td>
        <td class="fit">
          <%= link_to t('.show'), blog_path(blog),
            class: "btn btn-xs btn-info"%>
          <%= link_to t('.edit'), edit_blog_path(blog), 
            class: "btn btn-xs btn-primary"%>
          <%= link_to t('.delete'), blog_path(blog), 
            class: "btn btn-xs btn-danger", method: :delete, 
            data: { confirm: t('.are_you_sure') } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>