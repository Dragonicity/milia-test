<div class="container">
<div class="row">
  <ul>
    <% @cart.line_items.each do |item| %> 
      <li><%= item.quantity %> &times; <%= item.product.title %></li>
    <% end %>
  </ul>
  </div>
</div>
<div class="actions">
  <%= link_to t(:empty_cart), cart_path(@cart), class: "empty_cart", 
              method: :delete, data: { confirm: t(:are_you_sure) } %>
</div>