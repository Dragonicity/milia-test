<%= form_for @product do |f| %>
  


<% if @product.errors.any? %>
<div id="error_explanation">
<h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>
<ul>
<% @product.errors.full_messages.each do |message| %> <li><%= message %></li>
<% end %>
</ul> </div>
<% end %>




  <div class= "col-sm-12">
  <div class="form-group">
    <%= f.label t(:title), class: ('required' if required?(@product, :title)) %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <label class="btn btn-secondary">
      <%= t(:upload_main_image_file) %> <%= f.file_field :main_image,
          style: "display:none;" %>
    </label>
  </div>
  <%= f.hidden_field :main_image_cache %>
  <div class="form-group">
    <label class="btn btn-secondary">
      <%= t(:upload_thumb_nail_file) %> <%= f.file_field :thumb_nail,
          style: "display:none;" %>
    </label>
  </div>
  <%= f.hidden_field :thumb_nail_cache %>
  <div class="form-group">
    <%= f.label t(:description), class: ('required' if required?(@product, :description)) %>
    <%= f.hidden_field :description, class: 'form-control', rows: '15', id: "product_description" %><br/>
    <trix-editor input="product_description"></trix-editor>
  </div>
   <div class="form-group">
    <%= f.label t(:price), class: ('required' if required?(@product, :price)) %>
    <%= f.text_field :price, class: 'form-control' %>
  </div>
  <%= f.submit(@product.new_record? ? t(:create): t(:save), class: 'btn btn-primary') %>
  </div>
<% end %>