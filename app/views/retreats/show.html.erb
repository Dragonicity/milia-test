<div class="page-header">
  <%= render 'shared/page_title', title: t(:retreat_show_title) %>
  <ul class="actions">
    <li><%= link_to t(:index),  retreats_path, class: "index" %></li>
    <% if logged_in?(:site_admin, :teacher) %>
      <li><%= link_to t(:edit),   edit_retreat_path(@retreat), class: "edit" %></li>
      <li><%= link_to t(:delete), retreat_path, class: "delete", 
              method: :delete, data: { confirm: t(:are_you_sure) } %></li>
    <% end %>
  </ul>
</div>
<div class="container">
  <div class="row">
    <div class="col-sm-6">
      <%= image_tag @retreat.main_image, width: "400" %>
    </div>
    <div class="col-sm-6">
      <h4><%= @retreat.name %></h4>
      <h6 class="text-muted"><%= @retreat.overview %></h6>
        <p><%= t(:location) %>: <%= @retreat.location %></p>
        <P><%= t(:address) %>: <%= @retreat.address %></P>
        <P><%= t(:available_spaces) %>: <%= @retreat.available_spaces %></P>
        <p>Cost: USD 8,000 plus accommodation</p>
        <p><%= t(:teachers) %>: <%= @retreat.teachers %></p>
        <p><%= t(:start_date) %> : <%= @retreat.start_date.strftime('%v') %></p>
        <p><%= t(:end_date) %> : <%= @retreat.end_date.strftime('%v') %></p>
        <p><%= link_to(t(:program_link), @retreat.program_link, target: :_blank) %></p>
        <p><%= link_to(t(:registration_link), @retreat.registration_link, target: :_blank) %></p>
    </div>
    <div class="col-sm-12">
    <p><%= sanitize @retreat.body %></p> 
  </div>
</div>