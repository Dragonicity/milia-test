<footer class="footer">
  <div class="navbar navbar-default fixed-bottom" role="navigation">
    <div class="navbar-text col-12">
      <hr>
      <%= @copyright %> &nbsp; <%= t :copyright %> 
      <%= link_to(" Dragonicity Ltd", 'http://www.dragonicity.com') %>, 
      &nbsp; <%= t :all_rights_reserved %>
      <%= form_tag request.path, class: 'locale', method: :get do %>
        <%= select_tag 'set_locale', 
            options_for_select(LANGUAGES, I18n.locale.to_s),
            onchange: 'this.form.submit()' %>
        <%= submit_tag 'submit' %>
        <%= javascript_tag "$('.locale input').hide()" %>
      <% end %>
    </div>
  </div>
</footer>