<nav class="navbar navbar-toggleable-sm navbar-expand-sm fixed-top navbar-custom">
  <a class="navbar-brand">
   
    <%= link_to(t(:brand), root_path) %>
  </a>
  <button class="navbar-toggler navbar-toggler-left navbar-dark" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <ul class="navbar-nav ml-2">
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <%= nav_helper %>
      <div class="col nav-item">
        <% if !current_user %>
          <%= link_to(t('sign_in'), new_user_session_path, class: "nav-link float-right") %>
          <%= link_to(t('sign_up'), new_user_registration_path, class: "nav-link float-right") %>
        <% end %>
        <% if current_user %>
          <a href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class="pull-right img-responsive">
          <% if gravatar?(current_user) %>
            <%= gravatar_helper(current_user) %>
          <% else %>
            <%= ('<i class="fa fa-user nav-link"></i> ' + truncate(current_user.email, length: 30)).html_safe %>
          <% end %>
         </a>
        <% end %>       
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <a class="dropdown-item nav-link"<%= link_to t('edit_profile'), edit_user_registration_path %></a>
          <div class="dropdown-divider"></div>
          <a class="dropdown-item nav-link"<%= link_to(t('sign_out'), destroy_user_session_path, method: :delete) %></a>
        </div>
      </a>
    </div>
  </ul>
</nav>